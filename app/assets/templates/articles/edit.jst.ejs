<ul class="breadcrumb">
  <li>
  <a href="/articles/<%= article.id %>"><%= article.escape('title') %></a> <span class="divider">/</span>
  </li>
  <li class="active">
  <a href="#">Edit article</a>
  </li>
</ul>

<h1 class="page-header">
  Article details
  <small>Edit article content</small>
</h1>
<form class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="title">Title</label>
      <div class="controls">
        <input type="text" class="span6" id="title" value="<%= article.escape('title') %>" />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Period</label>
      <div class="controls">
        <input data-datepicker="datepicker" id="startDate" class="span2" type="text" value="<%= article.get('start_date') %>" />
        to
        <input data-datepicker="datepicker" id="endDate" class="span2" type="text" value="<%= article.get('end_date') %>" />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="published">Published</label>
      <div class="controls">
        <input data-datepicker="datepicker" id="published" class="span2" type="text" value="<%= article.get('published') %>" />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="country">Country</label>
      <div class="controls">
        <select id="country">
        </select>
      </div>
    </div>

    <div id="markitup-wrapper" class="control-group">
      <label class="control-label" for="article-body">Body</label>
      <div class="controls">
        <textarea id="article-body"><%= article.escape('body') %></textarea>
      </div>
    </div>

    <div id="map" class="map"></div>


    <div class="form-actions">
      <button type="submit" class="save-article btn btn-primary">Save</button>
      <img class="loader" src="/assets/loader.gif" />
    </div>

  </fieldset>
</form>

