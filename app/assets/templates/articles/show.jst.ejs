<div class="span8">
  <h1><%= article.get('title') %></h1>

  <div class="meta">
    <p>Dated <%= article.get('start-date') %>. Published <%= article.get('published') %></p>
  </div>

  <div class="btn-toolbar">
    <a class="btn btn-mini" href="#articles/<%= article.id %>/edit">
      <i class="icon-edit"></i>
      Edit
    </a>
    <% if (!article.get('published')) { %>
    <a class="btn btn-mini publish" href="#">
      <i class="icon-share"></i>
      Publish
    </a>
    <% } %>
    <a class="btn btn-mini " href="#articles/<%= article.id %>/photos/new">
      <i class="icon-upload"></i>
      Upload photo
    </a>
    <a class="btn btn-mini btn-danger" href="#">
      <i class="icon-trash icon-white"></i>
      Delete
    </a>
  </div>

  <%= superTextile(article.get('body')) %>


  <div id="map" class="map"></div>
</div>

<div class="span4">
  <div class="photos"></div>
</div>
