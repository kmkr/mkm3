<form class="form-horizontal">
  <fieldset>
    <legend>Create article</legend>
    <div class="control-group">
      <label class="control-label" for="title">Title</label>
      <div class="controls">
        <input type="text" class="span6" id="title" />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Period</label>
      <div class="controls">
        <input data-datepicker="datepicker" id="start-date" class="span2" type="text" />
        to
        <input data-datepicker="datepicker" id="end-date" class="span2" type="text" />
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="country">Country</label>
      <div class="controls">
        <select id="country">
        </select>
      </div>
    </div>

    <div id="markitup-wrapper" class="control-group">
      <label class="control-label" for="article-body">Body</label>
      <div class="controls">
        <textarea id="article-body"></textarea>
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn primary">Save</button>
      <button type="reset" class="btn">Reset</button>
    </div>

  </fieldset>
</form>
